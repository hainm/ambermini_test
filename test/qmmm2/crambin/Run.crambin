#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP TO_BE_DEtermined
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented

set sander = "../../../bin/sander"
if( $?TESTsander ) then
    set sander = $TESTsander
endif

if( ! $?DO_PARALLEL ) then
    setenv DO_PARALLEL " "
endif

cat > mdin <<EOF
Crambin: 5 cycles minimization using qm calculation
 &cntrl
        imin =1, maxcyc = 5, drms=0.005,
        ntpr=1, ntb=0, cut=8.1,
        ifqnt=1, igb=6
 /
 &qmmm
     iqmatoms= 80,81,82,83,84,85,86,87,88,89,90,
             91,92,99,100,101,102,103,104,
             105,106,107,108,115,116,117,118,
             125,126,127,128,129,130,131,132,133,
             134,135,136,137,138,139,140,141,142,
             149,150,151,152,153,
             160,161,162,163,164,165,166,167,
             174,175,176,177,178,179,180,181,182,
             183,184,185,186,187,
             194,195,196,197,198,199,200,201,
     qm_theory='PM3',adjust_q=0,
     qmcharge=1
 /
EOF

set output = crambin.out

touch dummy
$DO_PARALLEL $sander -O -c crambin.crd -o $output < dummy || goto error
../../dacdif -t 1 $output.save $output

/bin/rm -f restrt mdin mdinfo dummy
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)
