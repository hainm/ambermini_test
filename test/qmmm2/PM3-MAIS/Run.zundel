#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP TO_BE_DEtermined
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented

set sander = "../../../bin/sander"
if( $?TESTsander ) then
    set sander = $TESTsander
endif

if( ! $?DO_PARALLEL ) then
    setenv DO_PARALLEL " "
else
   set nproc=`$DO_PARALLEL ../../numprocs`
   if( $nproc > 2 ) then
      goto toomany
   endif
endif

cat > mdin <<EOF
Zundel PM3-MAIS test
&cntrl
  imin = 0,
  ntb = 0,
  ntx = 1,
  irest = 0,
  nstlim = 10,     
  dt = 0.0005,
  cut = 20.0,
  temp0 = 298.15,
  tempi = 298.15,
  ntt = 3,
  gamma_ln = 5.,
  jfastw = 4,
  ntpr = 1,
  ntwr = 1,
  ntwx = 1,
  ifqnt = 1, ioutfm=0,
/
&qmmm
 qmmask=':1-3',
 qmcharge=1,
 qm_theory='PM3MAIS',
/
EOF

set output = zundel.mdout
set mdcrd = zundel.mdcrd

touch dummy
$DO_PARALLEL $sander -O -c zundel.inpcrd -p zundel.prmtop -x $mdcrd -o $output < dummy || goto error
../../dacdif $output.save $output
../../dacdif $mdcrd.save $mdcrd

/bin/rm -f mdin mdinfo dummy restrt
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)

toomany:
echo "  DO_PARALLEL set to $DO_PARALLEL"
echo "  too many processors for this test"
exit(0)
