#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP TO_BE_DEtermined
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented

set sander = "../../../bin/sander"
if( $?TESTsander ) then
    set sander = $TESTsander
endif

if( ! $?DO_PARALLEL ) then
    setenv DO_PARALLEL " "
else
    echo "This test not set up for parallel"
    echo "need #nres>#nproc"
    exit 0
endif

cat > mdin <<EOF
Lysine: 5 cycles minimization, one methylene group QM, has link atoms
 &cntrl
        imin =1, maxcyc = 5, drms=0.005,
        ntpr=1, ntb=0, cut=99.,
        ifqnt=1, igb=1
 /
 &qmmm
        iqmatoms = 8,9,10,
        qm_theory='PM3',
        qmcharge=0,
        printcharges=0,
        qmgb=0, adjust_q=0
 /   
EOF

set output = lysine.out

touch dummy
$DO_PARALLEL $sander -O -c lysine.crd -o $output < dummy || goto error
../../dacdif -t 1 $output.save $output

/bin/rm -f restrt mdin mdinfo dummy
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)
