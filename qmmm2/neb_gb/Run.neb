#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP TO_BE_DEtermined
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented

set sander = "../../../bin/sander.PIMD"
if( $?TESTsander ) then
    set sander = $TESTsander
endif

if( ! $?DO_PARALLEL ) then
    setenv DO_PARALLEL " "
else
    set numprocs=`echo $DO_PARALLEL | awk -f numprocs.awk`
    set sander = "../../../bin/sander.PIMD.MPI"
    if( $numprocs > 3 ) then
        echo "Must have more residues than processors, exiting"
        echo "==================================================================="
        exit(0)
    endif
endif

cat > mdin <<EOF
 test of pure QM neb using alanine dipeptide
 &cntrl
   pimd_runtype=1
   pimd_use_original_mass = .true.
   ntx=1, irest = 0,
   ntwx=1, ntpr=1, ntwv=0, ntwe=0,
   ntb = 0, dielc = 1, igb = 6,
   cut=999.,
   nstlim = 10,dt=0.0005,nscm= 50,t = 0.0,
   ig = 71277, ntt = 3, gamma_ln=100,
   temp0=300,
   ineb = 1,
   skmin = 50,
   skmax = 50,
   ifqnt=1, ioutfm=0,
 /
 &qmmm
   qmmask = ':1-3'
   qmtheory=1, qmcharge=0, adjust_q=0
 /
EOF

set output = neb_pure_qm.out

touch dummy
$DO_PARALLEL $sander -O -p pimd.prmtop -c pimd.inpcrd -o $output < dummy || goto error
../../dacdif -t 2 $output.save $output
../../dacdif -t 1 mdcrd.save mdcrd
../../dacdif -t 3 restrt.save restrt

/bin/rm -f mdin mdinfo dummy
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)
