Cysteine dipeptide: 10 steps Min - Pure QM with MNDO/d
 &cntrl                                                  
   imin  = 1,     ! do a minimization
   maxcyc= 10,    ! max 10 minimization steps
   ncyc  = 5,     ! switch to conjugate gradient after 5 steps steepest descent
   ntb   = 0,     ! no PBC
   cut   = 999.,  ! non-bonded cutoff
   ntpr  = 1,     ! print every step
   ntwx  = 1,     ! write coordinates each step
   ioutfm= 0,     ! use ASCII MDCRD (not NetCDF)
   ifqnt = 1,     ! QM on
 /                                                       
 &qmmm                                                   
   qmmask       = '@*',
   qmcharge     = 0,
   qm_theory    = 'MNDO/d',
   scfconv      = 1.0d-10,
   tight_p_conv = 1,
 /                                                       
