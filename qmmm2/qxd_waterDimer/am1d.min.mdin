QM/MM Geometry optimization with DFTB
 &cntrl
  imin=1,     ! do a minimization
  maxcyc=1000,   ! max 500 minimization steps
  ntmin=3,    ! use xmin minimizer with L-BFGS quasi-Newton
  drms=0.1,   ! RMS gradient convergence criterium
  cut=9999.0, ! non-bonded cutoff (irrelevant for now with pure QM)
  ntb=0,      ! no periodic boundary conditions
  ntpr=1,     ! print every minimization step
  ntwx=1,     ! write coordinates each step
  ifqnt=1,    ! do QM/MM
  jfastw=4,   ! do not use routines for fast triangulated water
  ioutfm=0,
 /
 &qmmm
  qmmask       =':1',
  qmcharge     = 0,
  qm_theory    ='AM1D',
  qxd         = .true.,
  scfconv      = 1.0d-10,
  tight_p_conv = 1,
  verbosity    = 1,
 /
 &lmod
  xmin_method='TNCG',
 /
